---
/*
 */
import { Icon } from 'astro-icon'

interface Props {
    date: string
}
const { date } = Astro.props
---

<span class="date">
    <Icon name="mdi:calendar-blank-outline" slot="icon" aria-label="Date" />

    <time datetime={date}>{date}</time>
</span>
<style>
    .date {
        display: inline-flex;
        align-items: center;
        line-height: 1;
        & svg {
            color: var(--accent);
            flex-shrink: 0;
            width: 1rem;
            height: 1rem;
            margin-right: 0.25em;
        }
    }
</style>
