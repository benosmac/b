---
import { Icon } from 'astro-icon'

interface Props {
    videoUrl: string
    looping: boolean
}
const { videoUrl, looping } = Astro.props
---

<div class="video-wrapper">
    {
        looping ? (
            <video muted autoplay playsinline loop="true" width="400">
                <source src={videoUrl} />
            </video>
        ) : (
            <video controls width="400">
                <source src={videoUrl} />
            </video>
        )
    }
</div>

<style>
    .video-wrapper {
        display: flex;
        justify-content: center;
        width: 100%;
        padding-block-start: var(--gapSize);
        & video {
            width: 350px;
            max-width: 100%;
            border-radius: 1rem;
        }
    }
</style>
