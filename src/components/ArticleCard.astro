---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'
import Button from '@components/Button.astro'
import { Icon } from 'astro-icon'
import ArticleDate from '@components/ArticleDate.astro'
import ArticleTags from '@components/ArticleTags.astro'

export interface Props {
    title: string
    href: string
    img: ImageMetadata
    loading?: 'lazy' | 'eager'
    tags: Array<string>
    date: string
    description: string
}

const {
    title,
    href,
    img,
    loading = 'lazy',
    tags,
    date,
    description,
} = Astro.props

//Format date
const dateNum = new Date(date)
const dateString = dateNum.toLocaleString('en-AU', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
})
---

<li class="article-card">
    <div class="content">
        <a href={href} class="image">
            <Image
                src={img}
                format="webp"
                loading={loading}
                alt={title}
                width="500"
                height="200"
            />
        </a>
        <div class="text">
            <span>
                <h2>
                    <a href={href}>
                        {title}
                    </a>
                </h2>
                <span class="details">
                    <ArticleDate date={dateString} />
                    <ArticleTags tags={tags} />
                </span>
                <p class="description">{description}</p>
            </span>
            <Button
                url={href}
                text="Read article"
                hasIcon={true}
                iconPosition="right"
            >
                <Icon name="mdi:arrow-right" slot="icon" />
            </Button>
        </div>
    </div>
</li>

<style>
    .article-card:has(a:hover, a:focus-visible) {
        background-color: var(--surface-3);
        border: var(--borderAccent);
        transition: all 0.25s var(--defaultTiming);
        & h2 {
            border-bottom: var(--borderAccent);
            transition: all 0.25s var(--defaultTiming);
        }
    }
    .article-card {
        container: articleCard / inline-size;
        display: flex;
        list-style: none;
        padding: var(--gapSize);
        border: var(--border);
        & h2 {
            font-size: calc(var(--headingMultiplier) * 1);
            border-bottom: var(--border);
            padding-bottom: calc(var(--gapSize) / 2);
            margin-bottom: var(--borderGap);
            text-wrap: balance;
            & a {
                font-weight: unset;
            }
        }
        & a {
            text-decoration: none;
        }
        .content {
            display: flex;
            flex-direction: column;
            gap: var(--gapSize);

            .image {
                display: flex;
                flex-basis: 33%;
                & img {
                    max-width: 100%;
                    object-fit: cover;
                    object-position: center center;
                }
            }
            .details {
                display: flex;
                flex-wrap: wrap;
                gap: calc(var(--gapSize) / 2) var(--gapSize);
                font-size: 0.75rem;
                margin-bottom: calc(var(--gapSize) / 2);
            }
            .text {
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                justify-content: space-between;
                flex-basis: 67%;
                .description {
                }
                :global(.button) {
                    align-self: flex-end;
                }
            }
        }
    }
    @container (min-width: 400px) {
        .article-card {
            .content {
                flex-direction: row;
                & img {
                    height: auto;
                }
            }
        }
    }
</style>
