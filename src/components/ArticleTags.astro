---
/*
 */
import { Icon } from 'astro-icon'

interface Props {
    tags: Array<string>
}
const { tags } = Astro.props
---

<ul class="tags">
    <Icon name="mdi:tag-outline" slot="icon" />
    {
        tags.map((tag) => {
            return <li>{tag}</li>
        })
    }
</ul>

<style>
    .tags {
        display: inline-flex;
        align-items: center;
        list-style: none;
        line-height: 1;
        margin: 0;
        padding: 0;
        & li {
            display: inline-flex;
            margin: 0 0.5em 0 0;
            &:not(:last-child)::after {
                content: ',';
            }
        }
        & svg {
            color: var(--accent);
            flex-shrink: 0;
            width: 1rem;
            height: 1rem;
            margin-right: 0.25em;
        }
    }
</style>
