---
/*
 */
import { Icon } from 'astro-icon'

interface Props {
    tags: Array<string>
}
const { tags } = Astro.props
---

<span class="tags">
    <Icon name="mdi:tag-outline" slot="icon" aria-label="Tags" />
    <ul>
        {
            tags.map((tag) => {
                return <li>{tag}</li>
            })
        }
    </ul>
</span>

<style>
    .tags {
        display: inline-flex;
        align-items: center;
        line-height: 1;

        & ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }
        & li {
            display: inline-flex;
            margin: 0 0.25em 0 0;
            &:not(:last-child)::after {
                content: ',';
            }
        }
        & svg {
            color: var(--accent);
            flex-shrink: 0;
            width: 1rem;
            height: 1rem;
            margin-right: 0.25em;
        }
    }
</style>
