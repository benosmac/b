---
import '../css/global.css'
import '../css/animations.css'
import '../css/grid-line-transitions.css'
import Header from '../components/Header.astro'
import MetaTags from '@components/MetaTags.astro'
import Footer from '../components/Footer.astro'
export interface Props {
    title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <MetaTags
            description="Freelance frontend developer and designer from Melbourne, Australia"
        />
        <title>{title}</title>
    </head>
    <body id="body" class="home home-is-loading">
        <Header />
        <main id="main">
            <slot />
        </main>
        <Footer /></body
    >

    <script>
        // Handle Page in transitions
        const bodyEl = document.getElementById('body')
        function setPageLoaded() {
            bodyEl?.classList.remove('home-is-loading')
            bodyEl?.classList.add('home-is-loaded')
        }
        window.addEventListener('load', (event) => {
            setTimeout(setPageLoaded, 1000)
        })
    </script>

    <style is:global>
        #main {
            overflow-x: hidden;
            transition: all 0.25s var(--defaultTiming);
        }
        .transition #main {
            transform: translateY(2vh);
            opacity: 0;
            filter: blur(10px);
        }
    </style>
</html>
