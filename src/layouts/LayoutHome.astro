---
import '../css/global.css'
import '../css/animations.css'
import '../css/grid-line-transitions.css'
import PageTransition from '@components/PageTransition.astro'
import Header from '../components/Header.astro'
import MetaTags from '@components/MetaTags.astro'
import Footer from '../components/Footer.astro'
export interface Props {
    title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="home-is-loading">
    <head>
        <PageTransition />
        <MetaTags
            description="Freelance frontend developer and designer from Melbourne, Australia"
        />
        <title>{title}</title>
    </head>
    <body id="body" class="home">
        <Header />
        <main id="main">
            <slot />
        </main>
        <Footer /></body
    >

    <script></script>

    <style is:global>
        #main {
            overflow-x: hidden;
            transition: all 0.25s var(--defaultTiming);
        }
        .transition #main {
        }
    </style>
</html>
